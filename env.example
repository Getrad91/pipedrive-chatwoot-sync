# ==============================
# API CONFIGURATION
# ==============================
# Get your Pipedrive API token from: https://yourcompany.pipedrive.com/settings/api
PIPEDRIVE_API_KEY=your_pipedrive_api_token_here

# Get your Chatwoot API token from: https://support.liveport.com.au/app/accounts/2/settings/integrations/api
CHATWOOT_API_KEY=your_chatwoot_api_token_here

# ==============================
# DATABASE CONFIGURATION
# ==============================
MYSQL_ROOT_PASSWORD=root_password_2024
MYSQL_PASSWORD=sync_password_2024

# ==============================
# API URLS (usually don't need to change)
# ==============================
CHATWOOT_BASE_URL=https://support.liveport.com.au/api/v1/accounts/2
PIPEDRIVE_BASE_URL=https://api.pipedrive.com/v1

# ==============================
# SYNC CONFIGURATION
# ==============================
BATCH_SIZE=50
RETRY_ATTEMPTS=3
RETRY_DELAY=5
DEFAULT_COUNTRY_CODE=+61

# ==============================
# LOGGING CONFIGURATION
# ==============================
LOG_LEVEL=INFO
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ==============================
# MONITORING & ALERTS
# ==============================
# Google Chat webhook URL for alerts (get from Google Chat > Apps & integrations > Webhooks)
SUPPORT_GOOGLE_CHAT=https://chat.googleapis.com/v1/spaces/YOUR_SPACE_ID/messages?key=YOUR_KEY&token=YOUR_TOKEN

# Monitoring thresholds
MONITOR_INTERVAL_MINUTES=30
ALERT_ERROR_THRESHOLD=10
MAX_SYNC_AGE_HOURS=2

